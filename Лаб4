#include <stdio.h>
#include <math.h>

int main()
{
	int a = 10, b = 4;
	float S, P;
	S = a * b;
	P = (a + b)*2;
	printf("Площадь: %.2f, периметр: %.2f \n", S, P);
	
	const float p = 3.14;
	int d = 5;
	float L;
	L = p * d;
	printf("Длина окружности: %.2f \n", L);
	
	a = 12;
	b = 18;
	P = (a + b)/2;
	printf("Среднее арифметическое чисел a и b: %.2f \n", P);
	
	a = 4;
	b = 3;
	a = pow(a, 2);
	b = pow(b, 2);
	float C;
	S = a + b;
	C = a - b;
	L = a * b;
	P = a / b;
	printf("Сумма квадтратов: %.2f, разность квадратов: %.2f, произведение квадратов: %.2f, частное квадратов: %.2f \n", S, C, L, P);
	
	a = -27;
	b = 15;
	a = fabs(a);
	b = fabs(b);
	S = a + b;
	C = a - b;
	L = a * b;
	P = a / b;
	printf("Сумма модулей: %.2f, разность модулей: %.2f, произведение модулей: %.2f, частное модулей: %.2f", S, C, L, P);
}
